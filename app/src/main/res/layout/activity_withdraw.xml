<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WithdrawActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        android:background="@color/colorPrimaryDark"
        app:titleTextColor="@color/color_white"
        app:contentInsetStartWithNavigation="0dp"
        android:id="@+id/toolbar_withdraw"
        app:menu="@menu/withdraw_menu">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/logo_good"
                android:contentDescription="Global-Lotto Logo" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Withdraw Fund"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="20sp"/>
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:padding="8dp"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                app:state_dragged="true"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:background="@color/cardview_dark_background"
                    android:orientation="horizontal">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Balance"
                        android:layout_weight="0.1"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:background="@color/cardview_dark_background"
                        android:textColor="@color/color_white"
                        android:padding="8dp"
                        />
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¦200.00"
                        android:textSize="16sp"
                        android:textColor="@color/color_white"
                        android:id="@+id/wdraw_balance"
                        android:padding="8dp"
                        android:layout_weight="0.7"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif-black"
                        android:background="#878073"
                        />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.2"
                        android:padding="4dp"
                        android:id="@+id/wdraw_refresh"
                        android:background="@color/cardview_dark_background"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:src="@drawable/ic_refresh_black_24dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

          <androidx.appcompat.widget.AppCompatSpinner
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="12dp"
              android:id="@+id/wdraw_bank"
              />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                android:textColorHint="@color/color_black"
                android:hint="Account name">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:inputType="text"
                    android:id="@+id/act_wdraw_acc_name"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                android:textColorHint="@color/color_black"
                android:hint="Account number">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:focusable="false"
                    android:id="@+id/act_wdraw_acc_number"
                    android:cursorVisible="false"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:endIconMode="clear_text"
                android:id="@+id/act_wdraw_layout_amount"
                android:textColorHint="@color/color_black"
                android:hint="Enter Amount">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:id="@+id/act_wdraw_acc_amount"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cash out"
                android:textAllCaps="false"
                android:padding="12dp"
                android:id="@+id/act_wdraw_cash_out"
                android:layout_margin="8dp"
                android:elevation="4dp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>