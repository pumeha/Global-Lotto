<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.GamesFragment"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="vertical">
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:padding="8dp"
            android:text="Select Game"/>
        <androidx.appcompat.widget.AppCompatSpinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="12dp"
            android:backgroundTint="@color/colorPrimary"
            android:id="@+id/games_select"
            android:entries="@array/game_type"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:padding="8dp"
            android:text="Select Game Type"/>
        <androidx.appcompat.widget.AppCompatSpinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginEnd="2dp"
            android:padding="8dp"
            android:layout_margin="12dp"

            android:backgroundTint="@color/colorPrimary"
            android:id="@+id/games_spinner"
            android:entries="@array/g_cati"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:id="@+id/games_lay_num"
            android:weightSum="1">

            <androidx.appcompat.widget.AppCompatSpinner
                android:layout_width="0dp"
                android:layout_weight="0.45"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/colorPrimary"
                android:dropDownWidth="150dp"
                android:spinnerMode="dialog"
                android:id="@+id/games_number"
                android:entries="@array/g_cati_direct"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_by"
                android:layout_weight="0.1"
                android:layout_margin="12dp"
                android:text="by"/>
            <androidx.appcompat.widget.AppCompatSpinner
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:layout_weight="0.45"
                android:dropDownWidth="150dp"
                android:spinnerMode="dialog"
                android:id="@+id/games_number_by"
                android:backgroundTint="@color/colorPrimary"
                android:entries="@array/g_cati_direct"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatSpinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="12dp"
            android:visibility="gone"
            android:backgroundTint="@color/colorPrimary"
            android:id="@+id/games_spinner_90"
            android:entries="@array/games_90"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/picker_11"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <include layout="@layout/number_picker" />
        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Number"
            android:textAllCaps="false"
            android:id="@+id/select_number_90"
            android:padding="8dp"
            android:layout_gravity="center"
            android:visibility="gone"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selected numbers are:"
            android:textSize="16sp"
            android:padding="8dp"
            android:textStyle="bold"
            android:id="@+id/game_selected_number"
            android:textColor="#FF09BB64"
            />
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content" android:scrollbars="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:id="@+id/game_selected_linear"
                android:orientation="horizontal">

            </LinearLayout>
        </HorizontalScrollView>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:endIconMode="clear_text"
            android:textColorHint="@color/color_black"
            android:hint="Stack Amount">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:inputType="number"
                android:id="@+id/games_amt"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="12dp"
            android:id="@+id/games_play"
            android:text="Play Now"/>
    </LinearLayout>

</ScrollView>